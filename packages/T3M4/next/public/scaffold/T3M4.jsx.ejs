import { T3M4Provider as ThemingProvider, useT3M4 as useTheming } from '@t3m4/<%= module  %>'

export const schema = {
  root: {
    facets: {
      color: ['blue', 'red', 'green']
    }
  }
}

export const config = {
  root: {
    facets: {
      color: {
        strategy: 'multi',
        default: 'red'
      }
    }
  }
}

export const T3M4Provider = ({ children }) => (
  <ThemingProvider schema={schema} config={config}>
    {children}
  </ThemingProvider>
)
export const useT3M4 = (island) => useTheming(island)